---
import "../styles/global.css"
const { edu } = Astro.props;
---

<ul class="mb-12">
    <li 
    class="group relative grid pb-1 items-baseline transition-all sm:grid-cols-8 sm:gap-8 md:gap-4 lg:hover:!opacity-100 lg:group-hover/list:opacity-50"
    >
        <div class="absolute -inset-x-4 -inset-y-4 z-0 hidden rounded-md transition motion-reduce:transition-none lg:-inset-x-6 lg:block lg:group-hover:bg-slate-600/50 lg:group-hover:shadow-[inset_0_1px_0_0_rgba(148,163,184,0.1)] lg:group-hover:drop-shadow-lg">
        </div>
        <header class="z-10 mb-2 mt-1 text-xs font-bold uppercase tracking-wide text-slate-700 sm:col-span-2" aria-label={`${edu.startDate} to ${edu.endDate}`}>
            {edu.startDate} - {edu.endDate}
        </header>
        <div class="z-10 sm:col-span-6">
            <h3 class="font-medium leading-snug text-slate-200">
                <div>
                    <a class="inline-flex items-baseline font-medium leading-tight text-slate-200 hover:text-teal-300 focus-visible:text-teal-300  group/link text-base" href=`${edu.url}` target="_blank" rel="noreferrer noopener" aria-label={`${edu.url} (opens in a new tab)`}>
                        <span class="absolute -inset-x-4 -inset-y-2.5 hidden rounded md:-inset-x-6 md:-inset-y-4 lg:block">
                        </span>
                        <span><span class="inline-block">{edu.university}
                        </span>
                        </span>
                    </a>
                </div>
            </h3>
            <p class="mt-2 text-sm leading-normal">
            {edu.title}, {edu.degree}
            <!-- <p class="mt-2 text-sm leading-normal"> -->
            <!--     {edu.gpa} -->
            <!-- </p> -->
            </p>
        </div>
    </li>
</ul>
